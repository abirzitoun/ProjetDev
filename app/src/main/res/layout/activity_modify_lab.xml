<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Lab Name -->
        <EditText
            android:id="@+id/nameModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Lab Name"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/> <!-- Increased padding for touch target size -->

        <!-- Lab Description -->
        <EditText
            android:id="@+id/descriptionModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Lab Description"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/>
        <!-- Lab Description -->
        <EditText
            android:id="@+id/dateModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Lab Date"
            android:inputType="date"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/><!-- Increased padding for touch target size -->

        <!-- Save Button -->
        <Button
            android:id="@+id/modifyButtonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:padding="16dp"/> <!-- Increased padding for button's touch target size -->
    </LinearLayout>
