<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Centered Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/employee_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:strokeColor="#007BFF"
        app:strokeWidth="2dp"
        android:backgroundTint="#E3F2FD"> <!-- Light blue card background -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <!-- Profile Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/employee_profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/_898915_fever_man_mask_patient_protection_icon"
                     app:strokeWidth="3dp"
                    app:strokeColor="#007BFF"
                      />

                <!-- Name and Email -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: John Doe"
                        android:textSize="18sp"
                        android:textColor="#003366"
                        android:fontFamily="@font/poppinsmedium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B3E5FC"
                android:layout_marginVertical="16dp" />

            <!-- Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Phone: +123 456 789"
                    android:textColor="#003366"
                    android:textSize="16sp" />

                <!-- Birth Date -->
                <TextView
                    android:id="@+id/text_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Birth Date: 01/01/1990"
                    android:textColor="#003366"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/text_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Gender: Male"
                    android:textColor="#003366"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Blood Group -->
                <TextView
                    android:id="@+id/text_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Blood Group: O+"
                    android:textColor="#003366"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Allergies -->
                <TextView
                    android:id="@+id/text_allergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Allergies: Pollen"
                    android:textColor="#003366"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />





            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
